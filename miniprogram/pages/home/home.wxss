/* pages/home/home.wxss */
.event-list {
  background-color: #fafbfc;
  padding: 20px 0;
}

.event-link {
  margin: 10px;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 5rpx 8rpx 10rpx rgba(53, 178, 225, 0.26);
  overflow: hidden;
}

.event-img image {
  width: 100%;
}

.event-content {
  padding: 25rpx;
}

.event-title {
  line-height: 1.7em;
}

.event-desc {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-size: 14px;
  color: #666;
  line-height: 1.5em;
  font-weight: 200;
}

.event-box {
  margin-top: 15px;
  overflow: hidden;
}

.event-address,
.event-time {
  float: left;
  color: #cecece;
  font-size: 12px;
  padding-right: 15px;
}