<!--pages/user/user.wxml-->
<view class="fadeIn {{hideToast ? 'fadeOut' : ''}}" wx:if="{{toast}}">
	<view class="weui-mask_transparent"></view>
	<view class="weui-toast">
		<i class="weui-icon-success-no-circle weui-icon_toast"></i>
		<view class="weui-toast__content">执行完毕</view>
	</view>
</view>
<form bindsubmit="bindFormSubmit">
	<view>
		<view class="weui-cells__group weui-cells__group_form">
			<view class="weui-cells">
				<view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
					<view class="weui-cell__hd">
						<label class="weui-label" style="width: 3em">类型</label>
					</view>
					<view class="weui-cell__bd">
						<picker bindchange="bindPickerChange" value="{{index}}" range="{{types}}">
							<view class="weui-select">{{types[index]}}</view>
						</picker>
					</view>
				</view>
				<view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
					<view class="weui-cell__hd"></view>
				</view>
				<view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">
						<label class="weui-label">姓名</label>
					</view>
					<view class="weui-cell__bd">
						<input class="weui-input" name="filename" value="{{filename}}" placeholder="请输入姓名" placeholder-class="weui-input__placeholder" />
					</view>
				</view>
				<view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">
						<label class="weui-label">学校</label>
					</view>
					<view class="weui-cell__bd">
						<input class="weui-input" name="stdin" placeholder="请输入学校" placeholder-class="weui-input__placeholder" />
					</view>
				</view>
				<view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">
						<label class="weui-label">学号</label>
					</view>
					<view class="weui-cell__bd">
						<input class="weui-input" name="stdin" placeholder="请输入学号" placeholder-class="weui-input__placeholder" />
					</view>
				</view>
				<view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">
						<label class="weui-label">班级</label>
					</view>
					<view class="weui-cell__bd">
						<input class="weui-input" name="stdin" placeholder="请输入班级" placeholder-class="weui-input__placeholder" />
					</view>
				</view>
				<view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">
						<label class="weui-label">课程</label>
					</view>
					<view class="weui-cell__bd">
						<input class="weui-input" name="stdin" placeholder="请输入课程" placeholder-class="weui-input__placeholder" />
					</view>
				</view>
				<view class="weui-cell">
					<button type="primary" form-type="submit" loading="{{loading}}">提交</button>
				</view>
			</view>
		</view>
	</view>
</form>